use std::str::FromStr;
use crate::ast::{Motion, Action, Command};

grammar;

pub Command: Command = <r:Repeat> <a:Action> => {
    Command {
        repeat: r,
        action: a,
    } 
};

pub Motion: Motion = {
    "w" => Motion::Word,
    "h" => Motion::Left,
    "l" => Motion::Right,
};

pub Action: Action = {
    "d" <m:Motion> => Action::Delete(m),
    "c" <m:Motion> => Action::Change(m),
    "y" <m:Motion> => Action::Yank(m),
    <m:Motion> => Action::Move(m)
};

pub Repeat: u32 = <s:r"[0-9]*"> => u32::from_str_radix(s, 10).unwrap_or(1);

